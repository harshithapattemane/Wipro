
//QUESTION 1


import java.util.Scanner;

public class Person {
    // TODO: Define the 'Person' class with 'name' and 'age' member variables
    String name;
    int age;

    public static void main(String[] args) {
        // TODO: Write your code here
        Scanner sc=new Scanner(System.in);
        String nameInput=sc.nextLine();
        int ageInput=sc.nextInt();

        Person p=new Person();

        p.name=nameInput;
        p.age=ageInput;

        System.out.println("Name: "+p.name);
        System.out.println("Age: "+p.age);
    }
}



//QUESTION 2


import java.util.Scanner;

public class Main {

    static int sumOfDigits(int n)
    {
        if(n==0)
        {
            return 0;
        }
        else 
            return (n%10)+sumOfDigits(n/10);
    }

    public static void main(String[] args) {

        Scanner sc=new Scanner(System.in);
      
        int num=sc.nextInt();

        int result=sumOfDigits(num);

        System.out.println(result);
        //write your answer here
    }
}


//QUESTION 3



public class Main {

    public static void main(String[] args) {

        //write your answer here
        Book b1=new Book();
           System.out.println("Book 1:");
           b1.displayInfo();
      // call displayInfo();
        Book b2=new Book("Java Programming","Sakshi",2024);
        System.out.println("Book 2:");
        b2.displayInfo();
        // call displayInfo();
    }
}

class Book{

String title;
String author;
int year;

Book()
{
    title="Not specified";
    author="Unknown";
    year=0;
}

Book(String t,String a,int y)
{
    title=t;
    author=a;
    year=y;
}
    public void displayInfo() {
        System.out.println("Title: " + title);
        System.out.println("Author: " + author);
        System.out.println("Year: " + year);
        System.out.println();
    }
}



//QUESTION 4



import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

   Scanner s=new Scanner(System.in);
	Constructor cuboid1 = new Constructor();

    double l=s.nextDouble();
    double b=s.nextDouble();
    double h=s.nextDouble();

    Constructor cuboid2=new Constructor(l,b,h);

    s.close();
    }
}

class Constructor{
    double length,breadth,height;

    Constructor()
    {
        System.out.println("Constructor without parameter");
        length=10;
        breadth=10;
        height=10;

        double volume =length*breadth*height;
        System.out.println("Volume is "+volume);
        
    }

     Constructor(double l, double b,double h )
    {
        System.out.println("Constructor with parameter");
        length=l;
        breadth=b;
        height=h;

        double volume =length*breadth*height;
        System.out.println("Volume is "+volume);
        System.out.println();
    }
}
